<html>
<head>
    <style>
        .Btn {
            color: white !important;
        }
    </style>
</head>

@model IEnumerable<JobsProjectApp.Models.Categories>

@{
    ViewBag.Title = "Index";
}

<h2>Categories Management</h2>
<br />

<table class="table table-bordered">
    <tr class="btn-warning">
        @*<th>
                @Html.DisplayNameFor(model => model.cat_id)
            </th>*@
        <td><h4><center>Category Id</center></h4></td>
        <td><h4><center>Category Name</center></h4></td>
        @*<th>
                @Html.DisplayNameFor(model => model.cat_name)
            </th>*@
        <td><h4><center>Options</center></h4></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <center> @Html.DisplayFor(modelItem => item.cat_id)</center>
           </td>
            <td>
                <center>  @Html.DisplayFor(modelItem => item.cat_name)</center>
            </td>
            <td>
                  <center><div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.cat_id }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Details", "Details", new { id = item.cat_id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.cat_id }, new { @class = "btn btn-danger" })
                    </div></center>
</td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-warning Btn" })
</p>
</html>