<html>
<head>
    <style>
        .btn-primary {
            padding: 1px 30px 10px 20px;
        }

        .Btn {
            color: white !important;
        }
    </style>
</head>
@model JobsProjectApp.Models.SeekerToJob

@{
    ViewBag.Title = "ApplyForJob";
}

<h2>Apply For Job</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        @{
            if (ViewBag.Msg != null)
            {
                <h5>@ViewBag.Msg</h5>
            }
        }
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Message, 7, 40, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send Msg" class="btn btn-primary" />
                @Html.ActionLink("Back to List", "JobsInCategories", "Jobs", new { id = Session["cat_id"] },new { @class = "btn btn-warning Btn" })
            </div>
        </div>
    </div>
            }
</html>