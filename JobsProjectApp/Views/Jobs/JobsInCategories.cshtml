<head>
    <style>
        .Btn {
            color: white !important;
        }
    </style>
</head>
@model IEnumerable<JobsProjectApp.Models.Jobs>

@{
    ViewBag.Title = "JobsInCategories";
}

<h2>@Model.FirstOrDefault().category.cat_name Jobs</h2>
<br />
<br />
