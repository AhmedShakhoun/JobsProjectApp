<html>
<head>
    <style>
        .btn-primary {
            padding: 1px 30px 10px 20px;
        }

        .Btn {
            color: white !important;
        }
    </style>
</head>

@model JobsProjectApp.Models.Jobs
@{
    ViewBag.Title = "Create";
}

<h2>Create Jobs</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5> @Html.LabelFor(model => model.job_title, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.job_title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.job_title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>@Html.LabelFor(model => model.job_description, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.job_description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.job_description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5> @Html.LabelFor(model => model.job_requirement, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.job_requirement, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.job_requirement, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5> @Html.LabelFor(model => model.cat_id, "Category List", htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.DropDownList("cat_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cat_id, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
