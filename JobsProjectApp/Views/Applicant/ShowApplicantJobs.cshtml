@model IEnumerable<JobsProjectApp.ViewModels.ApplicantViewModel>
@{
    ViewBag.Title = "ShowApplicantJobs";
}

<h2>Applied Jobs</h2>
<br />
<br />
@if(Model.Count() == 0)
{
    <p>
        <h3>There are no Jobs you have applier, Apply Now!</h3>
    </p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 thumbnail card" style="margin-left:20px;margin-bottom:30px;">
                <div class="card-body" style="width: 18rem;">
                    <h5> @Html.DisplayFor(modelItem => item.Job_Title)</h5>
                    <p class="card-text">
                        @if (item.Is_Accepted == true)
                    {
                            <span class="text text-success">Accepted</span>
                        }
                        else if (item.Is_Accepted == false)
                        {
                            <span class="text text-danger">Rejected</span>
                        }
                        else
                        {
                            <label class="text text-warning">UnderReview</label>
                        }
                    </p>
                </div>
            </div>
        }
    </div>

}

<div>
    <br />
    <br />
</div>

